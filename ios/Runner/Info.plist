<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<key>CFBundleDevelopmentRegion</key>
	<string>$(DEVELOPMENT_LANGUAGE)</string>
	<key>CFBundleDisplayName</key>
	<string>تطبيق الأذكار</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>test_athkar_app</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(FLUTTER_BUILD_NAME)</string>
	<key>CFBundleSignature</key>
	<string>????</string>
	<key>CFBundleVersion</key>
	<string>$(FLUTTER_BUILD_NUMBER)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>
	
	<!-- Permisos de localización -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>نحتاج إلى إذن الموقع لحساب مواقيت الصلاة الدقيقة لمنطقتك</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>نحتاج إلى إذن الموقع لحساب مواقيت الصلاة الدقيقة لمنطقتك وإشعارك عند وقت الصلاة</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>نحتاج إلى إذن الموقع للحصول على مواقيت الصلاة حتى عندما لا يكون التطبيق مفتوحًا</string>
	
	<!-- Permisos para notificaciones -->
	<key>UIBackgroundModes</key>
	<array>
		<!-- Eliminado el modo "audio" ya que no usaremos sonidos -->
		<string>fetch</string>
		<string>remote-notification</string>
	</array>
	
	<!-- Descripción de los permisos de notificaciones -->
	<key>NSCalendarsUsageDescription</key>
	<string>نحتاج الوصول إلى التقويم لجدولة إشعارات الصلاة</string>
	
	<!-- Descripción de notificaciones -->
	<key>NSUserNotificationsUsageDescription</key>
	<string>نحتاج إلى إذن الإشعارات لإعلامك بمواقيت الصلاة</string>
	
	<!-- Soporte para idiomas -->
	<key>CFBundleLocalizations</key>
	<array>
		<string>ar</string>
		<string>en</string>
	</array>
	
	<!-- Configuración de UI -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
		<string>UIInterfaceOrientationPortraitUpsideDown</string>
		<string>UIInterfaceOrientationLandscapeLeft</string>
		<string>UIInterfaceOrientationLandscapeRight</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<false/>
	<key>CADisableMinimumFrameDurationOnPhone</key>
	<true/>
	<key>UIApplicationSupportsIndirectInputEvents</key>
	<true/>
	<key>UIStatusBarHidden</key>
	<false/>
	
	<!-- Permisos de notificaciones de cuerpo completo -->
	<key>NSUserNotificationAlertStyle</key>
	<string>alert</string>
	
	<!-- Fonts personalizadas -->
	<key>UIAppFonts</key>
	<array>
		<string>Fonts/Cairo-Regular.ttf</string>
		<string>Fonts/Cairo-Bold.ttf</string>
		<string>Fonts/Cairo-SemiBold.ttf</string>
		<string>Fonts/Cairo-Medium.ttf</string>
		<string>Fonts/Cairo-Light.ttf</string>
		<string>Fonts/Amiri-Bold.ttf</string>
	</array>
</dict>
</plist>